<div class="card" style="width: 22rem;">
    <div class="card-body">
        <h1>Common Items</h1>
        <h5 class="card-title"></h5>
        <p class="card-text">Some common item of vegetables here!</p>
    </div>
        <ul class="list-group list-group-flush">
            <ol>
                <% @common_items.each do |vegetable| %>
                <li>
                    <%= link_to vegetable.name, vegetable %>
                </li>
                <% end%>
            </ol>
        </ul>
        <div class="d-grid gap-2 col-4 mx-auto">
            <button type="button" class="btn btn-outline-primary">
              <a href="http://127.0.0.1:3000/common_items" class="card-link">Item Menu</a>
            </button>
        </div>
</div> 
    



