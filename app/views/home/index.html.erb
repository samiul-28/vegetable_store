<div class="container">
    <div class="row g-3">
            <div class="col-md-4 col-6">
                
                <div class="card" style="width: 22rem;">
                    <div class="card-body">
                        <h1>Common Items</h1>
                        <h5 class="card-title"></h5>
                        <p class="card-text">Some common item of vegetables here!</p>
                    </div>
                        <ul class="list-group list-group-flush">
                            <ol>
                                <% @common_items.each do |vegetable| %>
