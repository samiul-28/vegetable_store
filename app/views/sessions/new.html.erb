<%= render "users/form_container", header: "Create an Account", action_type: "signup"  do %>

   <%= form_with url: @login_path do |f| %>
    <div class="form-outline mb-4">
        <%= f.email_field :email_address, class: "form-control", placeholder: "Email", required: true %>
    </div>
    <div class="form-outline mb-4">
        <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
    </div>
    <div class="d-flex justify-content-center">
     <%= f.submit "Login", class: "btn btn-success"%>
    </div>
    <% end %>

<% end %>