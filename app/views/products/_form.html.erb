
<%= form_with model: product do |p| %>
    <div class="form-outline mb-4">
        <%= p.text_field :name, autofocus: true, class: "form-control", placeholder: "Product Name" %>
    </div>

    <div class="form-outline mb-4">
        <%= p.text_field :variety, class: "form-control", placeholder: "Variety" %>
    </div>

    <div class="form-outline mb-4">
        <%= p.date_field :mfg_date, class: "form-control", placeholder: "Manufaturing Date" %>
    </div>
    <div class="form-outline mb-4">
        <%= p.date_field :expiry_date, class: "form-control", placeholder: "Expiry Date" %>
    </div>        

    <div class="form-outline mb-4">
        <%= p.number_field :price, class: "form-control", placeholder: "Price in USD" %>
    </div>
    
    <div class="form-outline mb-4">
        <%= p.text_area :details, class: "form-control", placeholder: "Product Details" %>
    </div>

    <div class="form-outline mb-4">
        <%= p.select :category, Product::VALID_CATEGORIES, class: "form-control" %>
    </div>

    <div class="d-flex justify-content-center">
        <%= p.submit "Create Product", class: "btn btn-success" %>
    </div>
<% end %>
