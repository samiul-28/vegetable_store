<%= form_with model: vegetable do |form| %>
    <div class="row mb-3">
      <div class="col-sm-4 col-form-label">
        <%= form.label :name %><br>
      </div>
      <div class="col-sm-9">
          <div class="row form-control">
            <%= form.text_field :name %>
            <% vegetable.errors.full_messages_for(:name).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-4 col-form-label">
          <%= form.label :description %><br>
        </div>
        <div class="col-sm-9">
          <div class="row form-control">
            <%= form.text_area :description %>
            <% vegetable.errors.full_messages_for(:description).each do |message| %>
                <div><%= message %></div>
            <% end %>
          </div>
        </div>
    </div>

  <div class="col-auto">
    <%= form.submit class:"btn btn-primary" %>
    <% end %>
  </div>

